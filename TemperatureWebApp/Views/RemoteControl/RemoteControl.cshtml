@model TemperatureWebApp.ViewModels.RemoteControlModel
<h2>Control Raspberry Pi remotely</h2>

<p>Switch relay module</p>
@Html.ActionLink("Switch", "SwitchClientRelay", "RemoteControl", new { @class = "btn btn-default" })
<br />
<br />

<p>Set time interval for collecting temperature data</p>

@using (Html.BeginForm("SendTimeInterval", "RemoteControl", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(model => model.Interval, htmlAttributes: new { @class = "control-label" })
    @Html.EditorFor(model => model.Interval, new { htmlAttributes = new { @class = "form-control" } })
    
</div>
    <input type="submit" class="btn btn-primary" value="Set">
}